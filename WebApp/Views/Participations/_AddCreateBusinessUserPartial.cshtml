@model WebApp.Models.Participations.ParticipationCreateEditVm
<div class="container w-50">
    <form asp-action="CreateEdit">
        <div class="form-group">
            <label asp-for="BusinessUser!.CompanyName" class="control-label"></label>
            <input asp-for="BusinessUser!.CompanyName" class="form-control"/>
            <span asp-validation-for="BusinessUser!.CompanyName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BusinessUser!.RegistryCode" class="control-label"></label>
            <input asp-for="BusinessUser!.RegistryCode" class="form-control"/>
            <span asp-validation-for="BusinessUser!.RegistryCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BusinessUser!.NumberOfParticipants" class="control-label"></label>
            <input asp-for="BusinessUser!.NumberOfParticipants" class="form-control"/>
            <span asp-validation-for="BusinessUser!.RegistryCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Participation!.PaymentTypeId" class="control-label"></label>
            <select asp-for="Participation!.PaymentTypeId" class="form-control" asp-items="@Model.PaymentTypeSelectList"></select>
            <span asp-validation-for="Participation!.PaymentTypeId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Participation!.Information" class="control-label"></label>
            <textarea rows="7" asp-for="Participation!.Information" class="form-control"></textarea>
            <span asp-validation-for="Participation!.Information" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="EventId"/>
        <input type="hidden" asp-for="Participation!.Id"/>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary"/>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

    </form>
</div>