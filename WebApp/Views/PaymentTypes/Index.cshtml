@model IEnumerable<DAL.App.DTO.PaymentType>

<div class="container h-auto ps-0 pb-4">
    <div class="row g-0">
        <div class="col col-blue fs-4 lh-2 d-flex flex-column min-vh-50 justify-content-center align-items-center">
            <h3 >Maksemeetodid</h3>
        </div>
        <div class="col-8">
            <img class="img-fluid w-100 h-20 d-inline-block" src="~/images/libled.jpg" alt="Photo"/>
        </div>
    </div>
</div>
<p>
    <a asp-action="CreateEdit" id="create">Lisa uus maksemeetod.</a>
</p>
<table class="table w-50">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PaymentTypeName)
        </th>

        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model!)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentTypeName)
            </td>

            <td>
                <a asp-action="CreateEdit" asp-route-id="@item.Id">Muuda</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Kustuta</a>
            </td>
        </tr>
    }
    </tbody>
</table>