@model WebApp.Models.PaymentTypes.PaymentTypeVm

<div class="container h-auto ps-0">
    <div class="row g-0">
        <div class="col col-blue fs-4 lh-2 d-flex flex-column min-vh-50 justify-content-center align-items-center">
            <p >
            @if (Model.Id == Guid.Empty)
            {
                <p>Maksemeetodi lisamine</p>
            }
            else
            {
                <p>Maksemeetodi muutmine</p>
            }
        </div>
        <div class="col-8">
            <img class="img-fluid w-100 h-20 d-inline-block" src="~/images/libled.jpg" alt="Photo"/>
        </div>
    </div>
</div>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaymentTypeName" class="control-label"></label>
                <input asp-for="PaymentTypeName" class="form-control"/>
                <span asp-validation-for="PaymentTypeName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group mt-2">
                <div class="form-group mt-2">
                    @if (Model.Id == Guid.Empty)
                    {
                        <input type="submit" value="Lisa" class="btn btn-primary"/>
                    }
                    else
                    {
                        <input type="submit" value="Muuda" class="btn btn-primary"/>
                    }
                    <a class="btn btn-primary ms-2" asp-controller="PaymentTypes" asp-action="Index">Tagasi</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}