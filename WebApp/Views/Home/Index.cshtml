@model IEnumerable<DAL.App.DTO.Event>
@{ var futureCounter = 1; }
@{ var pastCounter = 1; }

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row">
        <div class="col col-blue">Miski text siin! </div>
        <div class="col">
            <img src="images/pilt.jpg" alt="Sample Photo"/>
        </div>
        <div class="w-100 mt-5"></div>

        <div class="col flex-container">

            <div class="inner-div1">Tulevased üritused</div>

            <table class="table">
                <tbody>
                @foreach (var item in Model!)
                {
                    @if (item.Date > DateTime.UtcNow)
                    {
                        <tr>
                            <th scope="row">@futureCounter</th>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                            <td>
                                <a asp-controller="Events" asp-action="EventDetails" asp-route-id="@item.Id">Osalejad</a>
                            </td>
                            <td>
                                <a asp-controller="Events" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="bi bi-x"></i>
                                </a>
                            </td>

                        </tr>
                        futureCounter++;
                    }
                }
                </tbody>
            </table>
            <div class="add-event">
                <a asp-controller="Events" asp-action="Create">Lisa Üritus</a>
            </div>
        </div>
        <div class="col flex-container">
            <div class="inner-div1">Toimunude üritused</div>
            <table class="table">
                <tbody>
                @foreach (var item in Model!)
                {
                    @if (item.Date < DateTime.UtcNow)
                    {
                        <tr>
                            <th scope="row">@pastCounter</th>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                            <td>
                                <a asp-controller="Events" asp-action="EventDetails" asp-route-id="@item.Id">Osalejad</a>
                            </td>

                        </tr>
                        pastCounter++;
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>