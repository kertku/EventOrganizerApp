@model WebApp.Models.Events.DeleteVm

<div class="container h-auto ps-0">
    <div class="row g-0">
        <div class="col col-blue fs-4 lh-2 d-flex flex-column min-vh-50 justify-content-center align-items-center">
            <h3 >Kustuta 端ritus</h3>
        </div>
        <div class="col-8">
            <img class="img-fluid w-100 h-20 d-inline-block" src="~/images/libled.jpg" alt="Photo"/>
        </div>
    </div>
</div>

@if (Model.Date < DateTime.Today)
{
    <div class="container d-flex justify-content-center ">
        <div class="mt-5">
            <div class="alert alert-danger mt-8 w-100 " role="alert">
                Ei saa kustutada juba toimunud 端ritust "@Model.EventName"?
            </div>
        </div>
    </div>
}
else
{
    
    <div class="container d-flex justify-content-center ">
        <div class="mt-5">
            <div class="alert alert-danger mt-8 w-100 " role="alert">
                Oled kindel, et soovid kustutada 端ritust "@Model.EventName"!
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id"/>
                <input type="hidden" asp-for="EventName"/>
                <input type="submit" value="Kustuta" class="btn btn-danger"/>
                <a class="btn btn-primary ms-2" asp-controller="Home" asp-action="Index">T端hista</a>
            </form>
        </div>
    </div>
}